<%- include('header',{title:'whitelist'}); -%>

    <body class="sidebar-mini" id="sidebar-mini">
        <div class="wrapper">
            <div class="preloader flex-column justify-content-center align-items-center">
                <img class="animation__shake" src="dist/img/AdminLTELogo.png" alt="AdminLTELogo" height="60" width="60">
            </div>

            <!-- Navbar -->
            <nav class="main-header navbar navbar-expand navbar-white navbar-light">
                <!-- Left navbar links -->
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" onclick="setnav()" data-widget="pushmenu" href="#" role="button"><i
                                class="fas fa-bars"></i></a>
                    </li>
                    <!-- <li class="nav-item d-none d-sm-inline-block">
                    <a href="index3.html" class="nav-link">Home</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="#" class="nav-link">Contact</a>
                </li> -->
                </ul>
            </nav>
            <!-- Navbar -->

            <!-- /.navbar -->

            <%- include('common/navlinks',{title:'whitelist'}); -%>

                <!-- Content Wrapper. Contains page content -->
                <div class="content-wrapper">
                    <!-- Content Header (Page header) -->
                    <section class="content-header">
                        <div class="container-fluid">
                            <div class="row mb-2">
                                <div class="col-sm-6">
                                    <h1>Whitelist Address</h1>
                                </div>
                                <div class="col-sm-6">
                                    <ol class="breadcrumb float-sm-right">
                                    </ol>
                                </div>
                            </div>
                        </div><!-- /.container-fluid -->
                    </section>

                    <!-- Main content -->
                    <section class="content">
                        <div class="card">

                            <!-- /.card-header -->
                            <div class="card-body">
                                <table class="table" id="myTable">
                                    <button onclick="setRootHash()" style="position: absolute;right: 20px;top: 16px"
                                        type="button">SetMerkleRoot</button>
                                    <input onchange="csvUpload(event)" type="file" name="csvFile" accept=".csv">
                                    <div id="status-file"></div>
                                    <thead>
                                        <tr>
                                            <th scope="col">Sno.</th>
                                            <th scope="col">Wallet Address</th>
                                            <th scope="col">Category</th>
                                            <th scope="col">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% data.forEach((e, index)=> { %>
                                            <tr>
                                                <th scope="row">
                                                    <%= index + 1 %>
                                                </th>
                                                <td>
                                                    <%= e.address %>
                                                </td>
                                                <td>
                                                    <%= e.category %>
                                                </td>
                                                <td>
                                                    <button onclick='deleteRow("<%= e.address %>")'>Delete</button>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </section>
                    <!-- /.content -->
                </div>
        </div>


        <script src="/dist/js/web3.min.js"></script>
        <script src="/dist/js/payment.js"></script>

        <%- include('footer'); -%>